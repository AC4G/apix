{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Template Config",
  "type": "object",
  "properties": {
    "templates": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "projects": { "type": "string" },
            "packages": { "type": "string" }
          },
          "required": ["projects", "packages"],
          "additionalProperties": false
        }
      }
    },
    "default": { "type": "string" }
  },
  "required": ["templates", "default"],
  "additionalProperties": false
}
